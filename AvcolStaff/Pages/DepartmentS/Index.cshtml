@page
@model AvcolStaff.Pages.DepartmentS.IndexModel

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departments[0].DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments[0].Staff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DepartmentsID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DepartmentsID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DepartmentsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
